<h2>Admin Login</h2>

<%= form_with url: admin_login_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, required: true, placeholder: "Enter admin password" %>
  </div>

  <div class="form-group">
    <%= form.submit "Login", class: "btn btn-success" %>
  </div>
<% end %>
