<h2>Edit Setting: <%= @setting.key.humanize %></h2>

<%= form_with model: [:admin, @setting], local: true do |form| %>
  <div class="form-group">
    <% if @setting.key.include?('enabled') %>
      <%= form.label :value, "Status" %>
      <%= form.select :value, [['Enabled', 'true'], ['Disabled', 'false']], {}, { class: 'form-control' } %>
    <% elsif @setting.key.include?('about_us') || @setting.key.include?('expertise') %>
      <%= form.label :value, "Content" %>
      <%= form.text_area :value, rows: 15, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-family: Arial, sans-serif;" %>
    <% else %>
      <%= form.label :value %>
      <%= form.text_field :value, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, placeholder: "Brief description of this setting", style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
  </div>

  <div class="form-group">
    <%= form.submit "Update Setting", class: "btn btn-success" %>
    <%= link_to "Cancel", admin_settings_path, class: "btn" %>
  </div>
<% end %>
