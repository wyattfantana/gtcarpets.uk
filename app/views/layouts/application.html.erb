<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="GT Carpets - Professional carpet fitting services in Buxton, UK. Quality carpet and vinyl installation by Gareth Taylor with over 20 years of experience.">
    <meta name="keywords" content="carpet fitting, Buxton, GT Carpets, vinyl flooring, carpet installation">
    <meta name="author" content="GT Carpets">
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
    <meta name="googlebot" content="index, follow">
    <link rel="canonical" href="https://gtcarpets.uk<%= request.path %>">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://gtcarpets.uk<%= request.path %>">
    <meta property="og:title" content="GT Carpets - Your first choice for quality carpet solutions.">
    <meta property="og:description" content="Professional carpet fitting services in Buxton, UK. Quality carpet and vinyl installation by Gareth Taylor with over 20 years of experience.">
    <meta property="og:image" content="<%= asset_url('logo.png') %>">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://gtcarpets.uk<%= request.path %>">
    <meta property="twitter:title" content="GT Carpets - Your first choice for quality carpet solutions.">
    <meta property="twitter:description" content="Professional carpet fitting services in Buxton, UK. Quality carpet and vinyl installation by Gareth Taylor with over 20 years of experience.">
    <meta property="twitter:image" content="<%= asset_url('logo.png') %>">
    
    <title>GT Carpets - Your first choice for quality carpet solutions.</title>
    <link rel="icon" type="image/png" href="<%= asset_path('logo.png') %>">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <!-- Google reCAPTCHA Script -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>
    <%= render 'shared/header' %>
    
    <!-- Only show hero section on home page -->
    <% if current_page?(root_path) %>
      <%= render 'shared/hero' %>
    <% end %>

    <!-- Flash Messages Display Section -->
    <div class="flash-messages">
        <% if notice %>
            <div class="flash flash-notice">
                <%= notice %>
            </div>
        <% end %>

        <% if alert %>
            <div class="flash flash-alert">
                <%= alert %>
            </div>
        <% end %>
    </div>

    <%= yield %>

    <%= render 'shared/footer' %>
    
    <script>
        // Hide flash messages
        setTimeout(function() {
            const flashMessages = document.querySelectorAll('.flash');
            flashMessages.forEach(function(message) {
                message.style.opacity = '0';
                message.style.transform = 'translateY(-20px)';
                setTimeout(function() {
                    message.style.display = 'none';
                }, 500);
            });
        }, 5000);
        
        // Anti-spam contact form protection
        document.addEventListener('DOMContentLoaded', function() {
            const contactForm = document.getElementById('contact-form');
            const submitBtn = document.getElementById('contact-submit-btn');
            
            if (contactForm) {
                let formInteracted = false;
                let formStartTime = Date.now();
                
                // Track form interaction
                contactForm.addEventListener('input', function() {
                    formInteracted = true;
                });
                
                // Prevent rapid submission
                contactForm.addEventListener('submit', function(e) {
                    const timeSinceLoad = (Date.now() - formStartTime) / 1000;
                    
                    // Must wait at least 3 seconds and interact with form
                    if (timeSinceLoad < 3) {
                        e.preventDefault();
                        alert('Please take your time to fill out the form properly.');
                        return false;
                    }
                    
                    if (!formInteracted) {
                        e.preventDefault();
                        alert('Please fill out the form before submitting.');
                        return false;
                    }
                    
                    // Disable submit button to prevent double-submission
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.value = 'Sending...';
                    }
                });
                
                // Additional honeypot protection - monitor honeypot field
                const honeypotField = document.querySelector('input[name="website"]');
                if (honeypotField) {
                    // If honeypot gets filled, disable form
                    honeypotField.addEventListener('input', function() {
                        if (this.value !== '') {
                            contactForm.style.display = 'none';
                        }
                    });
                }
            }
        });
        
        // Mobile menu swipe functionality - reinitialize on each interaction
        function initSwipeHandlers() {
            let startX = 0;
            let startY = 0;
            
            const navMenu = document.querySelector('.nav-menu');
            const mobileToggle = document.querySelector('.mobile-menu-toggle');
            
            if (!navMenu || !mobileToggle) return;
            
            // Remove existing listeners to prevent duplicates
            navMenu.removeEventListener('touchstart', navMenu.swipeStartHandler);
            navMenu.removeEventListener('touchend', navMenu.swipeEndHandler);
            document.removeEventListener('click', document.outsideClickHandler);
            
            // Touch start handler
            navMenu.swipeStartHandler = function(e) {
                startX = e.touches[0].clientX;
                startY = e.touches[0].clientY;
            };
            
            // Touch end handler
            navMenu.swipeEndHandler = function(e) {
                if (!startX || !startY) return;
                
                const endX = e.changedTouches[0].clientX;
                const endY = e.changedTouches[0].clientY;
                
                const diffX = startX - endX;
                const diffY = startY - endY;
                
                // Check if it's a horizontal swipe (more horizontal than vertical)
                if (Math.abs(diffX) > Math.abs(diffY)) {
                    // Swipe right to left (close menu) - only if menu is open
                    if (diffX > 50 && navMenu.classList.contains('active')) {
                        navMenu.classList.remove('active');
                        mobileToggle.classList.remove('active');
                        document.body.classList.remove('menu-open');
                    }
                }
                
                // Reset values
                startX = 0;
                startY = 0;
            };
            
            // Outside click handler
            document.outsideClickHandler = function(e) {
                if (navMenu.classList.contains('active') && 
                    !navMenu.contains(e.target) && 
                    !mobileToggle.contains(e.target)) {
                    navMenu.classList.remove('active');
                    mobileToggle.classList.remove('active');
                    document.body.classList.remove('menu-open');
                }
            };
            
            // Attach event listeners
            navMenu.addEventListener('touchstart', navMenu.swipeStartHandler, { passive: true });
            navMenu.addEventListener('touchend', navMenu.swipeEndHandler, { passive: true });
            document.addEventListener('click', document.outsideClickHandler);
        }
        
        // Initialize swipe handlers on page load
        initSwipeHandlers();
        
        // Re-initialize when menu is opened (in case of navigation changes)
        const mobileToggle = document.querySelector('.mobile-menu-toggle');
        if (mobileToggle) {
            mobileToggle.addEventListener('click', function() {
                setTimeout(initSwipeHandlers, 100); // Small delay to ensure menu is open
            });
        }
    </script>
</body>
</html>
