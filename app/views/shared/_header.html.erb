            <%= image_tag "logo.png", alt: "GT Carpets Logo" %>
        </a>
        <!-- Navigation -->
        <nav class="header-nav">
            <div class="mobile-menu-toggle">
                <span></span>
                <span></span>
                <span></span>
            </div>
